<?xml version="1.0" encoding="UTF-8"?>
<deployment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="urn:jboss:bean-deployer:2.0">
	
	<!-- MOBICENTS SIP PRESENCE SERVICE: SIP PRESENCE SERVER XML CONFIGURATION -->
	
	<!-- Gets the singleton and registers it as JMX MBean -->
	
	<bean name="Mobicents.SipPresence.PS.ServerConfiguration" class="org.mobicents.slee.sippresence.server.jmx.SipPresenceServerManagement">
      
      <annotation>@org.jboss.aop.microcontainer.aspects.jmx.JMX(name="org.mobicents.slee:sippresence=SipPresenceServerManagement",exposedInterface=org.mobicents.slee.sippresence.server.jmx.SipPresenceServerManagementMBean.class,registerDirectly=true)</annotation>
      
      <constructor factoryMethod="getInstance"/>
      
      <!-- the id of the XCAP App Usage to be used to retrieve notifier's pres-rules docs, from the XDMS -->
      <property name="presRulesAUID">${presence.server.notifier.presrules.auid}</property>
      
      <!-- the name of the document to be used to retrieve the notifier's pres rules doc, from the XDMS -->
      <property name="presRulesDocumentName">${presence.server.notifier.presrules.documentName}</property>
		
	  <!-- 
	  	the package names (separated by ':' char) for jaxb pojos, 
	  	to be used when (un)marshalling presence content.
	  	All whitespaces will be removed. 
	  -->	
	  <property name="jaxbPackageNames">
	  	org.mobicents.slee.sippresence.pojo.pidf:
	  	org.mobicents.slee.sippresence.pojo.rpid:
	  	org.mobicents.slee.sippresence.pojo.datamodel:
	  	org.mobicents.slee.sippresence.pojo.commonschema:
	  	org.mobicents.slee.sippresence.pojo.pidf.oma	  	
	  </property>	            	      
   </bean>
   
</deployment>