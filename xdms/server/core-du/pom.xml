<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">	
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>
	
	<parent>
		<artifactId>server-parent</artifactId>
		<groupId>org.mobicents.servers.xdm</groupId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	
	<artifactId>server-core-DU</artifactId>
					
	<dependencies>
		<!-- components -->
		<!-- core sbbs -->
		<dependency>
			<groupId>${pom.groupId}.core</groupId>
			<artifactId>server-core-sbb</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<!-- xcap-caps app usage sbb -->
		<dependency>
			<groupId>${pom.groupId}.core</groupId>
			<artifactId>appusage-xcap-caps-server-sbb</artifactId>
			<version>${pom.version}</version>			
		</dependency>
		<!--  internal client interface sbb -->
		<dependency>
			<groupId>${pom.groupId}.core</groupId>
			<artifactId>server-internal-client-sbb</artifactId>
			<version>${pom.version}</version>			
		</dependency>
		<!-- libs -->
		<dependency>
			<groupId>${pom.groupId}.core</groupId>
			<artifactId>commons</artifactId>
			<version>${pom.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<artifactId>appusage-oma-pres-rules-client</artifactId>
			<groupId>${pom.groupId}.core</groupId>
			<version>${pom.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<artifactId>appusage-pres-rules-client</artifactId>
			<groupId>${pom.groupId}.core</groupId>
			<version>${pom.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<artifactId>appusage-rls-services-client</artifactId>
			<groupId>${pom.groupId}.core</groupId>
			<version>${pom.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<artifactId>appusage-resource-lists-client</artifactId>
			<groupId>${pom.groupId}.core</groupId>
			<version>${pom.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<artifactId>appusage-xcap-caps-client</artifactId>
			<groupId>${pom.groupId}.core</groupId>
			<version>${pom.version}</version>
			<scope>runtime</scope>
		</dependency>	
	</dependencies>
	
	<build>
		<finalName>${mobicents.sip.presence.service.finalName.prefix}xdms-core-DU-${pom.version}</finalName>
		<plugins>
			<plugin>
				<groupId>org.mobicents.tools</groupId>
				<artifactId>maven-du-plugin</artifactId>
				<version>${mobicents.tools.mavenplugin.du.version}</version>
				<extensions>true</extensions>
				<configuration />
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>deploy-DU</id>
						<phase>install</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<copy overwrite="true" file="target/${project.build.finalName}.jar" todir="${jboss.home}/server/${node}/deploy" />
							</tasks>
						</configuration>
					</execution>
					<execution>
						<id>undeploy-DU</id>
						<phase>clean</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<delete file="${jboss.home}/server/${node}/deploy/${project.build.finalName}.jar" />
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
</project>