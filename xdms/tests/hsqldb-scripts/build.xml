<?xml version="1.0" encoding="utf-8"?>
<project name="HsqlDbDSReplacer" default="">
	
	<property environment="env" />

	<!-- JBOSS AS SERVER CONFIG -->
	<property name="jboss.home" value="${env.JBOSS_HOME}" />
	<property name="node" value="default" />
	
	<target name="install">
		<copy overwrite="true" file="${jboss.home}/server/${node}/deploy/hsqldb-ds.xml" toFile="hsqldb-ds.xml.backup"/>
		<copy overwrite="true" file="hsqldb-ds.xml" todir="${jboss.home}/server/${node}/deploy"/>			
	</target>

	<target name="uninstall">
		<copy failOnError="false" overwrite="true" file="hsqldb-ds.xml.backup" toFile="${jboss.home}/server/${node}/deploy/hsqldb-ds.xml"/>				
		<delete file="hsqldb-ds.xml.backup"/>
	</target>

</project>
